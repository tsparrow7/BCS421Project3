<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.DifficultyFragment"
    android:background="@color/colorAccent"
    android:layout_margin="16dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/difficulty_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your level:"
        android:textSize="24sp"
        android:textColor="@color/textAccent"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/difficulty_title"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- First level layout-->
        <RelativeLayout
            android:id="@+id/level_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/level_one_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Level 1"
                android:textSize="18sp"
                android:textColor="@color/textPrimary"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:src="@drawable/ic_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/level_one_text"
                android:layout_toEndOf="@id/level_one_text"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <!-- Second level layout-->
        <RelativeLayout
            android:id="@+id/level_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/level_two_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Level 2"
                android:textSize="18sp"
                android:textColor="@color/textPrimary"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:src="@drawable/ic_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/level_two_text"
                android:layout_toEndOf="@id/level_two_text"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <!-- Third level layout-->
        <RelativeLayout
            android:id="@+id/level_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/level_three_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Level 3"
                android:textSize="18sp"
                android:textColor="@color/textPrimary"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:src="@drawable/ic_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/level_three_text"
                android:layout_toEndOf="@id/level_three_text"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>