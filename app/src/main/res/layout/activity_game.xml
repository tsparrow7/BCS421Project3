<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/activity_game"
    tools:context=".view.GameActivity"
    android:background="@color/textAccent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="    "
            android:background="@android:drawable/btn_default"/>

        <Button
            android:id="@+id/Btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="    "
            android:background="@android:drawable/btn_default"/>

        <Button
            android:id="@+id/Btn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="    "
            android:background="@android:drawable/btn_default"/>

        <Button
            android:id="@+id/Btn4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="    "
            android:background="@android:drawable/btn_default"/>
        <!---->

        <Button
            android:id="@+id/upBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_arrow_upward_black_24dp"
            android:contentDescription="up"
            />

        <Button
            android:id="@+id/downBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_arrow_downward_black_24dp"
            android:contentDescription="down"
            />

        <Button
            android:id="@+id/leftBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:contentDescription="left"
            />

        <Button
            android:id="@+id/rightBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_arrow_forward_black_24dp"
            android:contentDescription="right"
            />

        <Button
            android:id="@+id/begin_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_play_arrow_black_24dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/Jay"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@drawable/jay"
            android:elevation="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <com.example.tjgaming.individualproject3.view.Gameboard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/game_board"
            android:elevation="1dp"/>

    </RelativeLayout>

</LinearLayout>